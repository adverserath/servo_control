# Mode Settings
# Set to 'servo' or 'stepper'
MOTOR_MODE=servo

# Servo settings
SERVO_HORIZONTAL_PIN=17
SERVO_VERTICAL_PIN=18
SERVO_FOCUS_PIN=27

# Stepper Motor Settings
STEPPER_ENABLE_PIN=22
STEPPER_DIR_PIN=23
STEPPER_STEP_PIN=24
STEPPER_MICROSTEPS=16
STEPPER_STEPS_PER_REV=200

# Telegram Bot Settings
# Get these values from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Example values (do not use these, replace with your own):
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_CHAT_ID=123456789 